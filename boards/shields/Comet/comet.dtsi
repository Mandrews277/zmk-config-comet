    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "default_kscan";
        diode-direction = "col2row";
        wakeup-source;

        row-gpios
			= <&gpio1 4 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   // P8  - num row
            , <&gpio1 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   // P9  - top row
			, <&gpio0 9 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // P10 - home row
			, <&gpio0 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // P1.11 (D16) - bottom row
			, <&gpio0 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   // P7  - cluster row
            ;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;

        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)    RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)    RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)    RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)    RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
                                    RC(4,3) RC(4,4) RC(4,5)    RC(4,6) RC(4,7) RC(4,8)
        >;
    };

    trackballs {
		compatible = "zmk,keymap-trackballs";
		trackballs = <&trackball>;
	};
};

/* Declare the trackball */
&spi2 {
    compatible = "nordic,nrf-spim";

    trackball: trackball@0 {
        compatible = "pixart,pmw3610-alt";
        status = "disabled";
        reg = <0>;
        spi-max-frequency = <2000000>;
        irq-gpios = <&gpio0 24 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        cpi = <600>;
        evt-type = <INPUT_EV_REL>;
        x-input-code = <INPUT_REL_X>;
        y-input-code = <INPUT_REL_Y>;
        /* invert-x; */
        /* invert-y; */
        /* swap-xy; */
    };
};