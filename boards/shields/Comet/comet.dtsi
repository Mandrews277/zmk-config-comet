            , <&key_physical_attrs 100 100 1000    125       0     0       0>
            , <&key_physical_attrs 100 100 1100      0       0     0       0>
            , <&key_physical_attrs 100 100 1200    125       0     0       0>
            , <&key_physical_attrs 100 100 1300    375       0     0       0>
            , <&key_physical_attrs 100 100 1400    750       0     0       0>
            , <&key_physical_attrs 100 100    0    175       0     0       0>
            , <&key_physical_attrs 100 100  100   1375       0     0       0>
            , <&key_physical_attrs 100 100  200   1125       0     0       0>
            , <&key_physical_attrs 100 100  300    100       0     0       0>
            , <&key_physical_attrs 100 100  400   1125       0     0       0>
            , <&key_physical_attrs 100 100  500   1250       0     0       0>
            , <&key_physical_attrs 100 100  900   1250       0     0       0>
            , <&key_physical_attrs 100 100 1000   1125       0     0       0>
            , <&key_physical_attrs 100 100 1100    100       0     0       0>
            , <&key_physical_attrs 100 100 1200   1125       0     0       0>
            , <&key_physical_attrs 100 100 1300   1375       0     0       0>
            , <&key_physical_attrs 100 100 1400   1750       0     0       0>
            , <&key_physical_attrs 100 100    0   2750       0     0       0>
            , <&key_physical_attrs 100 100  100   2375       0     0       0>
            , <&key_physical_attrs 100 100  200   2125       0     0       0>
            , <&key_physical_attrs 100 100  300    200       0     0       0>
            , <&key_physical_attrs 100 100  400   2125       0     0       0>
            , <&key_physical_attrs 100 100  500   2250       0     0       0>
            , <&key_physical_attrs 100 100  900   2250       0     0       0>
            , <&key_physical_attrs 100 100 1000   2125       0     0       0>
            , <&key_physical_attrs 100 100 1100    200       0     0       0>
